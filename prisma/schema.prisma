generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  idx       Int     @id @default(autoincrement())
  id        String  @unique
  password  String
  email     String  @unique
  userPic   String

  bookmark  Bookmark[]
}

model Bookmark {
  mark_id   Int     @id @default(autoincrement())
  name      String
  address   String
  userId    String

  user      User    @relation(fields: [userId], references: [id])

  @@unique([userId, address])
}